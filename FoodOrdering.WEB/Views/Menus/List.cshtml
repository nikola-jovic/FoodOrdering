@model IEnumerable<FoodOrdering.WEB.Models.MenuModel>

@{
	ViewBag.Title = "Lista jelovnika";
}
<p>
	@Html.ActionLink("Dodaj jelovnik", "Create", "Menus", null, new { @class = "btn btn-success" })
</p>

<h4 style="padding-top: 2%;">Jelovnici</h4>

<div class="space-top">
	<table class="table table-striped table-bordered dataTable table-responsive" id="datatableMenus">
		<colgroup>
			<col/>
			<col/>
			<col style="width: 7%;" />
		</colgroup>
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Id)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.DisplayName)
				</th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Id)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.DisplayName)
					</td>

					<td>
						@Html.ActionLink("Detalji", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
						@*@Html.ActionLink("Edit", "Edit", new { id = item.Id })*@
						@*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
<script type="text/javascript">
	$(document).ready(function () {
		$("#datatableMenus").DataTable();
	});
</script>
