@using FoodOrdering.WEB.Models
@model FoodOrdering.WEB.Models.ViewModels.LoginViewModel

<br />

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <img class="center-block" src="~/Content/images/gladnismo-logo-v1.png" alt="gladni-smo-logo" />
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Login to GladniSmo.com</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter your e-mail address" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter your password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>
                    <input type="submit" value="Log in" class="btn btn-lg btn-success btn-block" />
                }
                <hr />
                <center><h4>OR</h4></center>
                @Html.ActionLink("Register as a new user", "Register", null, new { @class = "btn btn-lg btn-default btn-block" })
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}