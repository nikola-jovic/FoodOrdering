@model IEnumerable<FoodOrdering.WEB.Models.MealModel>

@{
	ViewBag.Title = "Lista jela";
}

<p>
	@Html.ActionLink("Dodaj jelo", "Create", "Meals", null, new {@class = "btn btn-success" })
</p>

<h4 style="padding-top: 2%;">Jela</h4>

<div class="space-top">
	<table class="table table-striped table-bordered dataTable table-responsive" id="datatableMeals">
		<colgroup>
			<col />
			<col style="width: 10%;"/>
			<col />
			<col style="width: 8%;" />
			<col style="width: 7%;" />
		</colgroup>
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Category)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Description)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Price)
				</th>
				<th>
					
				</th>
			</tr>
		</thead>

		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<td>
						@item.CategoryDisplay((int)item.Category)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Description)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Price)
					</td>
					<td>
						@Html.ActionLink("Detalji", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
						@*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
						@Html.ActionLink("Details", "Details", new { id = item.Id }) |
						@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
<script type="text/javascript">
	$(document).ready(function () {
		$("#datatableMeals").DataTable({
			"columnDefs": [
				{ "orderable": false, "targets": 2 }
			]
		});
	});
</script>
